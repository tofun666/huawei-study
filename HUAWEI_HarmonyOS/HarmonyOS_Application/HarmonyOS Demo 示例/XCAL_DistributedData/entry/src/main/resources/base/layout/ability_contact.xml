<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        >

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:center_in_parent="true"
            ohos:text="$string:information_management"
            ohos:text_color="#222222"
            ohos:text_size="22fp"
            />

        <Button
            ohos:id="$+id:addContact"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:right_margin="16vp"
            ohos:text="$string:add"
            ohos:text_color="#a0a0a0"
            ohos:text_size="18fp"
            ohos:vertical_center="true"
            />

        <Button
            ohos:id="$+id:sync"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:left_margin="16vp"
            ohos:text="$string:sync"
            ohos:text_color="#a0a0a0"
            ohos:text_size="18fp"
            ohos:vertical_center="true"
            />
    </DependentLayout>

    <Component
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#eeeeee"
        />

    <DirectionalLayout
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        >

        <Text
            ohos:id="$+id:name"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:layout_alignment="center"
            ohos:text="$string:name"
            ohos:text_alignment="center"
            ohos:text_color="#222222"
            ohos:text_size="16fp"
            ohos:weight="10"
            />

        <Text
            ohos:id="$+id:phone"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:layout_alignment="center"
            ohos:text="$string:phone"
            ohos:text_alignment="center"
            ohos:text_color="#555555"
            ohos:text_size="16fp"
            ohos:weight="10"
            />

        <Text
            ohos:height="40vp"
            ohos:width="match_parent"
            ohos:left_margin="20vp"
            ohos:weight="7"
            >
        </Text>
    </DirectionalLayout>

    <ListContainer
        ohos:id="$+id:listContainer"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        />

</DirectionalLayout>